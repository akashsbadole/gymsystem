# Database connection string
# Format: postgresql://username:password@hostname:port/database_name
DATABASE_URL=postgresql://username:password@localhost:5432/mygymwebapp

# Node environment: development or production
NODE_ENV=development

# Port for the server to listen on (default is 5000)
PORT=5000

# Host to bind the server to (default is 0.0.0.0 which listens on all interfaces)
# Use 127.0.0.1 or localhost for local-only access
HOST=0.0.0.0

# Session secret for encrypting session cookies
# This should be a long, random string in production
SESSION_SECRET=your_secure_secret_key_here